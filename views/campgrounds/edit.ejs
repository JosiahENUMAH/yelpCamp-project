<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="post"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
          value="<%=campground.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Field Required: Please type name of Camp
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
          value="<%=campground.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Field Required: Please type Camp Location
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
          value="<%=campground.image%>"
          required
          placeholder="https://......"
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Field Required: Please input image url
        </div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="number"
            name="campground[price]"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            id="price"
            placeholder="0.00"
            min="0"
            required
            value="<%=campground.price%>"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">
            Field Required: Please select a Price
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          cols="30"
          rows="5"
          name="campground[description]"
          id="description"
          class="form-control"
          required
        >
<%=campground.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Field Required: Please add camp description
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-lg btn-success">Update Campground</button>
      </div>
    </form>

    <div class="mb-3">
      <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>
    </div>
    <div class="mb-5">
      <a href="/campgrounds">All Campgrounds</a>
    </div>
  </div>
</div>
